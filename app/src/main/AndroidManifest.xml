<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yen.androidappthesisyen" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MasterDetailItemListActivity"
            android:label="@string/title_masterdetailitem_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yen.androidappthesisyen.MainActivity" />
        </activity>


        <activity
            android:name=".MasterDetailItemDetailActivity"
            android:label="@string/title_masterdetailitem_detail"
            android:parentActivityName=".MasterDetailItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yen.androidappthesisyen.MasterDetailItemListActivity" />
        </activity>


    </application>

</manifest>
