<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yen.androidappthesisyen.MainFragment">


    <!--android:layout_column="0" ETC probably only need when you want to SKIP certain places in a row-->

    <!-- TODO change fill_parent to match_parent since it's the same but NEWER -->

    <Button
        android:id="@+id/button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="toMasterDetailActivity"
        android:text="@string/button_master_detail_activity"

        />

    <!-- COULD BE USEFUL FOR SOME BUTTONS: style="?android:attr/borderlessButtonStyle"-->


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView_main_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_margin="16dp"
        android:background="@drawable/border_ui"
        android:padding="16dp">


        <!--of fill parent of match parent maken?-->
        <ScrollView
            android:id="@+id/scrollView_tableLayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--layout height: wrap content maken? was een TOOLTIP TIP -->
            <TableLayout
                android:id="@+id/tableLayout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow_0_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--empty tablerow atm-->


                </TableRow>

                <TableRow
                    android:id="@+id/tableRow_1_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_connect_pebble"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/connect_pebble" />


                    <!-- perhaps use android:layout_span="4"-->
                    <TextView
                        android:id="@+id/textView_pebble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pebble_not_found"
                        android:textAppearance="?android:attr/textAppearanceMedium"

                        />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow_2_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_communication_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/communication_test"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ToggleButton
                        android:id="@+id/toggle_communication_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toggle_communication_test" />

                    <TextView
                        android:id="@+id/label_acceldata_stream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_acceldata_stream"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ToggleButton
                        android:id="@+id/toggle_pebble_acceldata_stream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acceldata_stream" />

                    <TextView
                        android:id="@+id/label_acceldata_datalogging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_acceldata_datalogging"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ToggleButton
                        android:id="@+id/toggle_pebble_acceldata_datalogging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acceldata_datalogging" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow_3_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_generic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="4"
                        android:text="@string/generic_not_found"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow_4_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/label_generic_sensor_streaming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_generic_sensor_streaming"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ToggleButton
                        android:id="@+id/toggle_generic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/generic_toggle" />
                </TableRow>

            </TableLayout>
        </ScrollView>


    </HorizontalScrollView>


    <ListView
        android:id="@+id/listView_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/horizontalScrollView_main_fragment"

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:background="@drawable/border_ui"
        android:padding="16dp" />


    <ScrollView
        android:id="@+id/scrollView_output_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listView_main"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/listView_main"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="@drawable/border_ui"
        android:padding="16dp"
        >


        <!--TODO Eventueel aanpassen naar EditText als dit meer opties zou bieden? -->
        <TextView
            android:id="@+id/textView_output_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/output_window"
            />


    </ScrollView>


    <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->

</RelativeLayout>
