<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yen.androidappthesisyen.PebbleGestureRecognitionFragment">


    <TextView
        android:id="@+id/x_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/no_data" />

    <TextView
        android:id="@+id/y_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/x_view"
        android:text="@string/no_data" />

    <TextView
        android:id="@+id/z_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/y_view"
        android:text="@string/no_data" />

    <TextView
        android:id="@+id/rate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/z_view"
        android:text="@string/no_data" />

    <Button
        android:id="@+id/toggle_accel_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rate_view"
        android:text="@string/start" />


    <!-- voor COMPLEXE gesture detection -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toggle_accel_stream"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relative_layout_complex_gesture_detection"
        android:focusable="true">


        <!-- TODO moet dit icon weergegeven worden omwille van de licentie of niet? -->
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/dfkiView"
            android:src="@drawable/dfki"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:layout_marginTop="5px"></ImageView>


        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dfkiView"
            android:layout_alignLeft="@+id/dfkiView"></SeekBar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training Set:\t"
            android:id="@+id/trainingSetLabel"
            android:layout_below="@+id/seekBar1" />


        <TextView
            android:layout_toRightOf="@+id/trainingSetLabel"
            android:id="@+id/activeTrainingSet"
            android:layout_below="@+id/seekBar1"
            android:layout_height="wrap_content"
            android:text="default"
            android:layout_width="wrap_content"></TextView>


        <EditText
            android:id="@+id/trainingSetName"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:text="default"
            android:layout_below="@id/trainingSetLabel"
            android:layout_width="fill_parent"
            android:layout_toRightOf="@+id/startNewSetButton" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Gesture Name:"
            android:id="@+id/gestureLabel"
            android:layout_below="@+id/startNewSetButton"></TextView>


        <EditText
            android:id="@+id/gestureName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="text"
            android:text="gesture0"
            android:layout_below="@+id/gestureLabel" />


        <Button
            android:id="@+id/startNewSetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/gestureName"
            android:text="Change Training Set"
            android:layout_below="@+id/trainingSetLabel" />


        <Button
            android:id="@+id/trainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gestureName"
            android:text="Start Training" />


        <Button
            android:id="@+id/deleteTrainingSetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gestureName"
            android:layout_toRightOf="@id/trainButton"
            android:text="Delete Training Set" />


        <TextView
            android:id="@+id/credit"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@+id/trainButton"
            android:text="Copyright © 2010 - Robert Neßelrath\nAll Rights Reserved"
            android:gravity="bottom|center_horizontal"></TextView>


    </RelativeLayout>


</RelativeLayout>
