    <style name="Theme.Lightdarkmixed" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_lightdarkmixed</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Lightdarkmixed</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Lightdarkmixed</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Lightdarkmixed</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Lightdarkmixed</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Lightdarkmixed</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_lightdarkmixed</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_lightdarkmixed</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Lightdarkmixed</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Lightdarkmixed.Widget</item>







        <!-- Generated with http://android-holo-colors.com -->
        <item name="android:editTextBackground">@drawable/extrabuttons_edit_text_holo_light</item>

        <item name="android:textColorHighlight">#9933b5e5</item>
        <item name="android:textSelectHandleLeft">@drawable/extrabuttons_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/extrabuttons_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/extrabuttons_text_select_handle_middle</item>

        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewExtraButtons</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/extrabuttons_btn_check_holo_light</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/extrabuttons_btn_radio_holo_light</item>

        <item name="android:buttonStyle">@style/ButtonExtraButtons</item>

        <item name="android:imageButtonStyle">@style/ImageButtonExtraButtons</item>

        <item name="android:dropDownSpinnerStyle">@style/SpinnerExtraButtons</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarExtraButtons</item>

        <item name="android:seekBarStyle">@style/SeekBarExtraButtons</item>

        <item name="android:ratingBarStyle">@style/RatingBarExtraButtons</item>

        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigExtraButtons</item>

        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallExtraButtons</item>

        <item name="android:buttonStyleToggle">@style/ToggleExtraButtons</item>

        <item name="android:listChoiceBackgroundIndicator">@drawable/extrabuttons_list_selector_holo_light</item>

        <item name="android:activatedBackgroundIndicator">@drawable/extrabuttons_activated_background_holo_light</item>

        <item name="android:fastScrollThumbDrawable">@drawable/extrabuttons_fastscroll_thumb_holo</item>


    </style>

    <style name="ActionBar.Solid.Lightdarkmixed" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_lightdarkmixed</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_lightdarkmixed</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_lightdarkmixed</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Lightdarkmixed</item>
    </style>

    <style name="ActionBar.Transparent.Lightdarkmixed" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_lightdarkmixed</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Lightdarkmixed</item>
    </style>

    <style name="PopupMenu.Lightdarkmixed" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lightdarkmixed</item>
    </style>

    <style name="DropDownListView.Lightdarkmixed" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_lightdarkmixed</item>
    </style>

    <style name="ActionBarTabStyle.Lightdarkmixed" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_lightdarkmixed</item>
    </style>

    <style name="DropDownNav.Lightdarkmixed" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_lightdarkmixed</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lightdarkmixed</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_lightdarkmixed</item>
    </style>

    <style name="ProgressBar.Lightdarkmixed" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_lightdarkmixed</item>
    </style>

    <style name="ActionButton.CloseMode.Lightdarkmixed" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_lightdarkmixed</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Lightdarkmixed.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Lightdarkmixed</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Lightdarkmixed</item>
    </style>










    <style name="AutoCompleteTextViewExtraButtons" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/extrabuttons_list_selector_holo_light</item>
        <item name="android:background">@drawable/extrabuttons_edit_text_holo_light</item>
    </style>

    <style name="ButtonExtraButtons" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/extrabuttons_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonExtraButtons" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/extrabuttons_btn_default_holo_light</item>
    </style>

    <style name="SpinnerExtraButtons" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/extrabuttons_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/extrabuttons_list_selector_holo_light</item>
    </style>

    <style name="TabExtraButtons">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/extrabuttons_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextExtraButtons">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarExtraButtons" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/extrabuttons_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/extrabuttons_progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="SeekBarExtraButtons" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/extrabuttons_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/extrabuttons_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/extrabuttons_scrubber_control_selector_holo_light</item>
    </style>

    <style name="RatingBarExtraButtons" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/extrabuttons_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/extrabuttons_ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigExtraButtons" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/extrabuttons_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/extrabuttons_ratingbar_holo_light</item>
    </style>

    <style name="RatingBarSmallExtraButtons" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/extrabuttons_ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/extrabuttons_ratingbar_small_holo_light</item>
    </style>

    <style name="ToggleExtraButtons" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/extrabuttons_btn_toggle_holo_light</item>
    </style>

